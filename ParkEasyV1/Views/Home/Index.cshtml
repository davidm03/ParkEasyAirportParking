@model ParkEasyV1.Models.ViewModels.AvailabilityViewModel

@{
    ViewBag.Title = "Home Page";
}

<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
@section scripts{

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

    <script>
        $(function () {
            $("#DepartureDate").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                minDate: -0,
                maxDate: "+12M +0D",
            });
        });
    </script>
    <script>
        $(function () {
            $("#ReturnDate").datepicker({
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                minDate: -0,
                maxDate: "+12M +0D"

            });
        });
    </script>

    <script>
        $("#DepartureTime").timepicker({
            timeFormat: 'HH:mm',
            interval: 60,
            minTime: '00:00',
            maxTime: '23:00',
            defaultTime: '00:00',
            startTime: '00:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>

    <script>
        $("#ReturnTime").timepicker({
            timeFormat: 'HH:mm',
            interval: 60,
            minTime: '00:00',
            maxTime: '23:00',
            defaultTime: '00:00',
            startTime: '00:00',
            dynamic: false,
            dropdown: true,
            scrollbar: true
        });
    </script>
}

<div class="container body-content">
    <div class="m-3">
        <h4 class="text-center">ParkEasy Airport Parking - Glasgow</h4>
        <h6 class="text-center">Check our availability and prices for parking your vehicle with our safe and secure storage while you travel!</h6>
    </div>
    <center>
                @using (Html.BeginForm("Availability", "Bookings", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                <div class="col-md-12 bg-dark-blue rounded">
                    <div class="row" style="padding-bottom: 20px;">
                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "control-label col-md-12 text-white offset-1 font-weight-bold" })
                            <div class="col-md-12 offset-1">
                                @Html.TextBoxFor(model => model.DepartureDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy" })
                                @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DepartureTime, htmlAttributes: new { @class = "control-label col-md-12 text-white offset-1 font-weight-bold" })
                            <div class="col-md-12 offset-1">
                                @Html.TextBoxFor(model => model.DepartureTime, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DepartureTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReturnDate, htmlAttributes: new { @class = "control-label col-md-12 text-white offset-1 font-weight-bold" })
                            <div class="col-md-12 offset-1">
                                @Html.TextBoxFor(model => model.ReturnDate, new { @class = "form-control", @placeholder = "dd/mm/yyyy" })
                                @Html.ValidationMessageFor(model => model.ReturnDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ReturnTime, htmlAttributes: new { @class = "control-label col-md-12 text-white offset-1 font-weight-bold" })
                            <div class="col-md-12 offset-1">
                                @Html.TextBoxFor(model => model.ReturnTime, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ReturnTime, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <center>
                        <div class="form-group">
                            <center><input type="submit" class="btn btn-white font-weight-bold my-2" value="Check Availability" /></center>
                        </div>
                    </center>
                </div>
                }
    </center>

    <h4 class="text-center">What We Offer</h4>

    <div class="row col-md-12 justify-content-center" style="margin-bottom: 40px;">
        <div class="col-md-3 bg-light rounded thinborder m-3">
            <center><i class="fas fa-lock fa-3x" style="padding-top: 20px; padding-bottom: 20px;"></i></center>
            <h6 class="text-center text-darkblue">Safe &amp; Secure Parking</h6><br />
            <p>
                <i class="fas fa-check text-darkblue"></i> CCTV <br />
                <i class="fas fa-check text-darkblue"></i> 24/7 Security Staff <br />
                <i class="fas fa-check text-darkblue"></i> Controlled Entry/Exit Barriers <br />
                <i class="fas fa-check text-darkblue"></i> Fully Insured Parking <br />
            </p>
        </div>

        <div class="col-md-3 bg-light rounded thinborder m-3">
            <center><i class="fas fa-car fa-3x" style="padding-top: 20px; padding-bottom: 20px;"></i></center>
            <h6 class="text-center text-darkblue">Professional Valet Service</h6><br />
            <p>
                We offer a new professional 5-star valet service that is carried out on-site by our quality valet staff. Make your return home even better with a spotless and sparkling clean valet.
            </p><br />
            <center style="padding-bottom: 20px;"><button class="btn btn-darkblue font-weight-bold" onclick="location.href='@Url.Action("Services")'">Learn More</button></center>
        </div>

        <div class="col-md-3 bg-light rounded thinborder m-3">
            <center><i class="fas fa-user-cog fa-3x" style="padding-top: 20px; padding-bottom: 20px;"></i></center>
            <h6 class="text-center text-darkblue">Online Booking Management</h6><br />
            <p>
                View and amend your booking with ease using our simple online web system. Have full control of your booking and make changes hassle free.
            </p><br />
            <center style="padding-bottom: 20px;"><button class="btn btn-darkblue font-weight-bold" onclick="location.href='@Url.Action("MyBookings", "Users")'">Manage My Booking</button></center>
        </div>
    </div>
    
</div>