@{
    ViewBag.Title = "Prices";
}

<div class="container body-content">
    <h4 class="text-center" style="padding-top: 30px; padding-bottom: 60px;">Our Prices</h4>

    <p>Pricing shown for 8 days parking</p>
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover text-center">
            <tr>
                <th></th>
                <th><p class="text-darkblue">Skyport</p><p style="font-size: x-large;">£46.99</p></th>
                <th><p class="text-darkblue">FlyingScot</p><p style="font-size: x-large;">£42.99</p></th>
                <th><p class="text-darkblue">ParkEasy</p><p style="font-size: x-large;">£@ViewBag.SlotPrice</p></th>
            </tr>
            <tr>
                <td>Shuttle Service</td>
                <td><i class="fas fa-check text-success"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
            </tr>
            <tr>
                <td>Fully Insured Parking</td>
                <td><i class="fas fa-check text-success"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
            </tr>
            <tr>
                <td>Valet Service</td>
                <td><i class="fas fa-times text-danger"></i></td>
                <td>£23.99-£44.99</td>
                <td>£@ViewBag.MiniValetPrice.00 - £@ViewBag.FullValetPrice.00</td>
            </tr>
            <tr>
                <td>Online Booking Management System</td>
                <td><i class="fas fa-times text-danger"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
                <td><i class="fas fa-check text-success"></i></td>
            </tr>
        </table>
    </div>
    <center style="padding-bottom: 30px;"><button type="submit" onclick="location.href='@Url.Action("Create", "Bookings")'" class="btn btn-darkblue font-weight-bold">Book with ParkEasy Today</button></center>
</div>
