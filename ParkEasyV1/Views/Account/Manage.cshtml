                {
                    @Html.AntiForgeryToken()
                        <input type="submit" value="Enable 2FA" class="btn btn-darkblue font-weight-bold" />
                }
            }
            <hr />
        </div>*@

        <div class="row col-md-10">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-darkblue font-weight-bold" type="button" onclick="location.href='@Url.Action("Index", "Users")'">Back</button>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-darkblue font-weight-bold" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="button" value="Change Password" onclick="location.href='@Url.Action("ChangePassword", "Manage")'" class="btn btn-darkblue font-weight-bold" />
                </div>
            </div>
        </div>
    </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
